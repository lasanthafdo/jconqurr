<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.jconqurr.core.build"
            name="%command.name">
      </command>
      <command
            id="org.eclipse.jconqurr.core.addnature"
            name="%command.name.0">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.jconqurr.internal.ui.commands.ConvertParallelCommand"
            commandId="org.eclipse.jconqurr.core.build">
      </handler>
      <handler
            class="org.eclipse.jconqurr.internal.ui.commands.AddJConqNature"
            commandId="org.eclipse.jconqurr.core.addnature">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               label="%menu.label">
            <command
                  commandId="org.eclipse.jconqurr.core.addnature"
                  label="%command.label"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.jconqurr.core.build"
                  label="%command.label.0"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="org.eclipse.jconqurr.parallelnature"
         name="%extension.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.jconqurr.core.JConqurrNature">
         </run>
      </runtime>
   </extension>

</plugin>
